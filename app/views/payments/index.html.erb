<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.id %></td>
        <td><%= payment.status %></td>
        <td><%= link_to 'Show', hotel_payment_path(@hotel, payment) %></td>
        <td><%= link_to 'Edit', edit_hotel_payment_path(@hotel, payment) %></td>
        <td><%= link_to 'Destroy', hotel_payment_path(@hotel, payment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Payment', new_hotel_payment_path %>
